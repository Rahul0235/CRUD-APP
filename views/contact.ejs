<%- include('layouts/header') %>
<section id="about">
  <div class="container mt-5">
    <h1 class="mb-3 text-center">Contact Us <i class="fa-regular fa-address-card"></i></h1>
      <div class="container mt-5 p-5 border border-1 border-dark rounded rounded-5 w-50">
          <form action="/contact" method="post" >
            <div class="row">
              <div class="mb-3 col-12">
                <label for="uname" class="form-label">Enter Your Name</label>
                <input type="text" name="name" class="form-control border border-1 border-dark" id="uname" placeholder="Enter Your Name">
              </div>
              <div class="mb-3 col-12">
                <label for="exampleFormControlInput1" class="form-label">Email address</label>
                <input type="email" name="email" class="form-control border border-1 border-dark" id="exampleFormControlInput1" placeholder="name@example.com">
              </div>
              <div class="mb-3 col-12">
                <label for="exampleFormControlTextarea1" class="form-label">Suggestion</label>
                <textarea class="form-control border border-1 border-dark" name="suggestion" id="exampleFormControlTextarea1" rows="3"></textarea>
              </div>
              <input type="submit" value="submit" class="btn btn-outline-dark w-25"/>
            </div>
          </form>
      </div>       
  </div>
</section>
<%- include('layouts/footer') %>