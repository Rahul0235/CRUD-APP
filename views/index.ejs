<%- include('layouts/header') %>
<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dimissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>
            <h1 class="text-center">User List</h1>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Image</th>
                        <th scope="col">Action</th>
                        </tr>
                    </thead>
                
                    <tbody>
                        <% users.forEach(user => { %>
                        <tr>
                            <th scope="row"><%= user.id %></th>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td><%= user.phone %></td>
                            <td><img src="/uploads/<%= user.image %>" alt="" style="width: 100px; height: 100px;"></td>
                            <td>
                                <a href="/editUser/<%= user.id %>" class="btn btn-outline-dark">Edit</a>
                                <a href="/deleteUser/<%= user.id %>" class="btn btn-outline-danger">Delete</a>
                            </td>

                        </tr>
                        <% }) %>
                    </tbody>    
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('layouts/footer') %>
